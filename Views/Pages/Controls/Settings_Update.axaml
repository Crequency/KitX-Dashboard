<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:icon="using:Material.Icons.Avalonia"
             xmlns:converters="using:KitX_Dashboard.Converters"
             xmlns:models="using:KitX_Dashboard.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KitX_Dashboard.Views.Pages.Controls.Settings_Update">

    <UserControl.Resources>
        <converters:Selection2VisibleConverter x:Key="Converter_S2V"/>
    </UserControl.Resources>

    <DockPanel Margin="0,10">

        <ui:InfoBar IsOpen="True" IsIconVisible="False" IsClosable="False" Margin="20,5"
                    DockPanel.Dock="Bottom">
            <DockPanel Margin="0,10,10,10">
                
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center"
                           Text="{Binding CanUpdateCount}"
                           FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                           FontWeight="Bold"/>
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center"
                           Text="{DynamicResource Text_Settings_Update_ComponentUpdatableCount}"
                           FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                           FontWeight="Bold"/>
                
                <Button DockPanel.Dock="Right" Margin="10,0,0,0" VerticalAlignment="Center"
                        Content="{DynamicResource Text_Settings_Update}"
                        FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                        FontWeight="Bold" FontSize="14"
                        Command="{Binding UpdateCommand}"/>
                <Button DockPanel.Dock="Right" VerticalAlignment="Center"
                        Content="{DynamicResource Text_Settings_Update_Check}"
                        FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                        FontWeight="Bold"
                        Command="{Binding CheckUpdateCommand}"/>

                <Border/>
            </DockPanel>
        </ui:InfoBar>

        <DataGrid Margin="25,5" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserSortColumns="True"
                  CornerRadius="5" SelectionMode="Single" Items="{Binding Components}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="{DynamicResource Text_Settings_Update_ComponentUpdatable}"
                                        Binding="{Binding CanUpdate}" IsThreeState="False"/>
                <DataGridTextColumn Header="{DynamicResource Text_Settings_Update_ComponentName}"
                                    Binding="{Binding Name}"
                                    FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                                    FontWeight="Bold"/>
                <DataGridTextColumn Header="{DynamicResource Text_Settings_Update_ComponentMD5}"
                                    Binding="{Binding MD5}"
                                    FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                                    FontWeight="Bold"/>
                <DataGridTextColumn Header="{DynamicResource Text_Settings_Update_ComponentSHA1}"
                                    Binding="{Binding SHA1}"
                                    FontFamily="/Assets/Fonts/SourceHanSans-VF.ttf#Source Han Sans VF"
                                    FontWeight="Bold"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>

    <!--<ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Vertical" Margin="0,10">
            
            

            <Border Height="100"/>

        </StackPanel>
    </ScrollViewer>-->
</UserControl>
